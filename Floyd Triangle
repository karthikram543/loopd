public class Floyd{
	  public static void main (String[]args) {
		 child Child = new child();
		 Child.loop(5);
		 
	 }
	 
	 void loop(int row) {
		
		 int i,col=0;
		 int count=0;
		 
		
		 for( i=0;i<=row;i++) {
			 for(col=0;col<=i;col++) {
				 System.out.print(" *");
				
			 }
			 
			 System.out.println();
			 
		 }
		 
	 }
	 
 }
 
